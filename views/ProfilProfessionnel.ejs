<div class="col">
    <h1>Creez votre CV</h1>
    <form class = "register" action="/creationcv" method="POST">

        <div class = "form setup">
            <input type="email" class="form-control" name = "email" placeholder="Email" id="champ1" onkeyup=verifierchamp()>
        </div>
        <br>
        <div class="form setup">
            <input type="lastname" class="form-control" name="lastname" placeholder="Nom" id="champ2" onkeyup=verifierchamp()>
        </div>
        <br>
        <div class="form setup">
            <input type="firstname" class="form-control" name="firstname" placeholder="Prenom" id="champ3" onkeyup=verifierchamp()>
        </div>
        <br>
        <div class="form setup">
            <input type="title" class="form-control" name="title" placeholder="Titre du cv" id="champ4" onkeyup=verifierchamp()>
        </div>
        <br>
        <div class = "form setup">
            <button type="submit" id= "buttonB" class="btn btn-primary border-width-2 d-none d-lg-inline-block" disabled>Créer mon CV</button>
        </div>
        <br>
        <div class="form-control">
            <a class="password-forgotten" href="/resetPassword">Mot de passe oublié ?</a>
    
        </div>
    </form>
