    <section class="site-section">
        <form action='/Inscription' method="POST" class="form" id="myForm">
            <h3>Êtes vous un étudiant ou un employeur ?</h3> 
            <input type="checkbox" id="Etudiant" name="EtudiantCheckBox" value="Etudiant" onclick="estEtudiant()">
            <label for="Etudiant"> Je suis un étudiant</label><br>
            <input type="checkbox" id="Employeur" name="EmployeurCheckBox" value="Employeur" onclick="estEmployeur()">
            <label for="Employeur">Je suis un employeur</label><br>


      <div class="container">
        <div class="row">
          <div class="col-lg-6 mb-5" id="champsEtudiant" style="display:none">
            <h2 class="mb-4">Inscrivez-vous en tant qu'étudiant</h2>
              <div class="row form-group" >
                <div class="col-md-12 mb-3 mb-md-0">   
                  <label class="text-black" for="fname">Id d'etudiant</label>
                  <br>
                  <input type="number" class="form-control" id="id_etudiant" name="id_etudiant" max="9999999" min="1000000"
                oninvalid="this.setCustomValidity('Le numéro étudiant doit contenir 7 chiffres')"
                oninput="this.setCustomValidity('')">
                    </div>
              </div>
              <div class="row form-group">
                <div class="col-md-12 mb-3 mb-md-0">   
                  <label class="text-black" for="fname">Nom d'etudiant</label>
                  <br>
                  <input type="text" class="form-control" id="nom_etudiant" name="nom_etudiant">
                </div>
              </div>
              <div class="row form-group">
                <div class="col-md-12 mb-3 mb-md-0">   
                  <label class="text-black" for="fname">Prénom d'etudiant</label>
                  <br>
                  <input type="text" class="form-control" id="prenom_etudiant" name="prenom_etudiant">
                </div>
              </div>
              <div class="row form-group">
                <div class="col-md-12 mb-3 mb-md-0">   
                  <label class="text-black" for="fname">Date de naissance</label>
                  <br>
                  <input type="date" class="form-control" id="date_naissance_etudiant" name="date_naissance_etudiant">
                </div>
              </div>
              <div class="row form-group">
                <div class="col-md-12 mb-3 mb-md-0">   
                  <label class="text-black" for="fname">CV etudiant</label>
                  <br>
                  <input type="file" class="form-control" accept="application/pdf" id="cv">
                </div>
              </div>
            
          </div>
          <div id="champsEntreprise" style="display:none">
            <h2 class="mb-4">Inscrivez-vous en tant qu'employeur</h2>
            <div class="row form-group">
                <div class="col-md-12 mb-3 mb-md-0">
                    <label class="text-black" for="fname">Id entreprise</label>
                    <br>
                    <input type="number"  class="form-control" id="id_employeur" name="id_employeur" min="1000000000" maxlength="9999999999"
                oninvalid="this.setCustomValidity('Le numéro entreprise doit contenir 10 chiffres')"
                oninput="this.setCustomValidity('')">
                </div>
            </div>
            <div class="row form-group">
                <div class="col-md-12 mb-3 mb-md-0">
                    <label class="text-black" for="fname">Nom employeur</label>
                    <br>
                    <input type="text" class="form-control" id="nom_employeur" name="nom_employeur">
                </div>
            </div>
            <div class="row form-group">
                <div class="col-md-12 mb-3 mb-md-0">
                    <label class="text-black" for="fname">Nom recruteur</label>
                    <br>
                    <input type="text" class="form-control" id="nom_recruteur" name="nom_recruteur">
                </div>
            </div>
          </div>
          <div id="champsCommuns" style="display: none;">
            <div class="row form-group">
                <div class="col-md-12 mb-3 mb-md-0">
                    <label class="text-black" for="fname">@Email</label>
                    <br>
                    <input type="email" class="form-control" id="email" name="email">
                </div>
            </div>
            <div class="row form-group">
                <div class="col-md-12 mb-3 mb-md-0">
                    <label class="text-black" for="fname">Mot de passe</label>
                    <br>
                    <input type="password" class="form-control" id="mdp" name="mdp" pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}"
                title="Le mot de passe doit contenir 8 caractères, au moins un chiffre, au moins une lettre majuscule, au moins une lettre miniscule et un symbole spécial"
                required>
                </div>
            </div>
            <div class="row form-group">
                <div class="col-md-12 mb-3 mb-md-0">
                    <label class="text-black" for="fname">Confirmer mot de passe</label>
                    <br>
                    <input type="password" class="form-control" id="mdpScndfois" name="mdpScndfois" pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}"
                required>
                </div>
            </div>
            <div class="row form-group">
                <div class="col-md-12 mb-3 mb-md-0">
                  <button onclick="check()"> Je m'inscris</button>   
                </div>
            </div>
          </div>
        </div>
      </div>
    </form>

              

              

           
    
 
     
  
  


    <!-- SCRIPTS -->
    <script>
        function estEmployeur() {
            document.getElementById("Etudiant").checked = false
            document.getElementById("champsEtudiant").style.display = "none";
            document.getElementById("champsEntreprise").style.display = "block";
            document.getElementById("champsCommuns").style.display = "block";
        }
        function estEtudiant() {
            document.getElementById("Employeur").checked = false
            document.getElementById("champsEntreprise").style.display = "none";
            document.getElementById("champsEtudiant").style.display = "block";
            document.getElementById("champsCommuns").style.display = "block";
        }
        function check() {
            var mdpScnd = document.getElementById('mdpScndfois')
            var mdp = document.getElementById('mdp')
            if (mdpScnd.value != mdp.value) {
                alert('Les deux mots de passe ne correspondent pas')
                //input.setCustomValidity('Password Must be Matching.');
            } else {
                document.getElementById("myForm").submit();
            }
        }
    </script>


